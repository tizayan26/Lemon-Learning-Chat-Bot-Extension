{
    "name": "Lemon Learning Chatbot Demo",
    "version": "1.1",
    "description": "Lemon Learning Chatbot Demo",
    "author": "Nasirul Akbar Khan",
   
    
    "content_scripts": [ {
      "all_frames": false,
      "js": [ "assets/js/common.js", "assets/js/popup.js", "assets/js/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }],

    "manifest_version": 3,

    "icons": {
      "16": "assets/icons/16x16.png",
      "48": "assets/icons/48x48.png",
      "128": "assets/icons/128x128.png"
    },

    "web_accessible_resources": [
      {
        "resources": ["assets/icons/send.svg"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      },
      {
        "resources": ["assets/icons/send_active.svg"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      },
      {
        "resources": ["assets/icons/robot.svg"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      },
      {
        "resources": ["assets/imgs/logo.png"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      },
      {
        "resources": ["assets/fonts/Helvetica36ThinItalic_22436.woff"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      },
      {
        "resources": ["assets/fonts/Helvetica46LightItalic_22438.woff"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      },
      {
        "resources": ["assets/fonts/Helvetica56Italic_22440.woff"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      },
      {
        "resources": ["assets/fonts/Helvetica65Medium_22443.woff"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      },
      {
        "resources": ["assets/fonts/Helvetica85Heavy_22449.woff"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      },
      {
        "resources": ["assets/fonts/Helvetica86HeavyItalic_22450.woff"],
        "matches": ["<all_urls>"],
        "use_dynamic_url": true
      }
      
    ],
    "permissions": ["tabs"],
   
    "update_url": "https://clients2.google.com/service/update2/crx"
}